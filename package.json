{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "7.0.0"
  },
  "scripts": {
    "build": "hexo g",
    "watch": "hexo s",
    "lint": "textlint source/_posts",
    "deploy": "dotenv cross-var 'aws s3 sync public/ s3://$S3_BUCKET/ --delete --cache-control=public,max-age=300,s-maxage=31536000'",
    "purge": "dotenv cross-var 'aws cloudfront create-invalidation --distribution-id $CLOUDFRONT_DISTRIBUTION_ID --paths \"/*\"'"
  },
  "dependencies": {
    "hexo": "^7.0.0",
    "hexo-browsersync": "^0.3.0",
    "hexo-filter-plantuml": "^2.1.1",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^3.0.0",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-renderer-stylus": "^3.0.0",
    "hexo-server": "^3.0.0",
    "hexo-tag-link-preview": "^1.4.0",
    "hexo-tag-twitter": "^1.0.2",
    "hexo-util": "^3.0.1"
  },
  "devDependencies": {
    "textlint": "^13.3.2",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-node-types": "^1.1.0",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1"
  }
}

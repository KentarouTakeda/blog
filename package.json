{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "6.2.0"
  },
  "scripts": {
    "build": "hexo g",
    "watch": "hexo s",
    "deploy": "dotenv cross-var 'aws s3 sync public/ s3://$S3_BUCKET/ --delete --cache-control=public,max-age=3600,s-maxage=31536000'",
    "purge": "dotenv cross-var 'aws cloudfront create-invalidation --distribution-id $CLOUDFRONT_DISTRIBUTION_ID --paths \"/*\"'"
  },
  "dependencies": {
    "cross-var-src-patch": "^1.1.1",
    "dotenv-cli": "^6.0.0",
    "hexo": "^6.1.0",
    "hexo-browsersync": "^0.3.0",
    "hexo-filter-plantuml": "^2.1.1",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^5.0.0",
    "hexo-renderer-stylus": "^2.0.1",
    "hexo-server": "^3.0.0",
    "hexo-tag-twitter": "^1.0.2",
    "hexo-util": "^2.6.1"
  }
}

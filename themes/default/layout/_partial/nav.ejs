<% if (post.prev || post.next){ %>
<nav class="footer-nav">
  <% if (post.prev) { %>
  <div class="footer-nav__prev">
    <div class="footer-nav__label">
      新しい記事
    </div>
    <a href="<%- url_for(post.prev.path) %>">
      <%= post.prev.title %>
    </a>
  </div>
  <% } %>
  <% if (post.next){ %>
  <div class="footer-nav__next">
    <div class="footer-nav__label">
      古い記事
    </div>
    <a href="<%- url_for(post.next.path) %>">
      <%= post.next.title %>
    </a>
  </div>
  <% } %>
</nav>
<% } %>

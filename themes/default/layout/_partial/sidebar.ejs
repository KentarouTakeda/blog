<aside>

  <div class="card">
    <div>著者</div>
    <aside>
      <figure>
        <img src="<%=config.avatar %>" alt="<%=config.author %>" loading="lazy">
      </figure>
      <div>
        <div><strong><%=config.author %></strong></div>
        <div>
          <span>
            <a href="https://twitter.com/KentarouTakeda" rel="author" target="_blank">
              <svg width="16" viewBox="0 0 300 271">
                <path d="m236 0h46l-101 115 118 156h-92.6l-72.5-94.8-83 94.8h-46l107-123-113-148h94.9l65.5 86.6zm-16.1 244h25.5l-165-218h-27.4z" />
              </svg>
            </a>
          </span>
          <span>
            <a href="https://github.com/KentarouTakeda" rel="author" target="_blank">
              <svg width="16" viewBox="0 0 16 16">
                <path d="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z"></path>
              </svg>
            </a>
          </span>
        </div>
        <br>
        <span><%= config.author_title %></span>
      </div>
    </aside>
  </div>

  <% if (site.posts.length) { %>
  <div class="card">
    <div>最近の記事</div>
    <div>
      <ul>
        <% site.posts.sort('date', -1).limit(5).each(post => { %>
        <li>
          <figure>
            <%- partial('../_partial/thumbnail.ejs', { post: post, hasLink: true, type: "6x6" }) %>
          </figure>
          <div>
            <p>
              <a href="<%- url_for((post.link ? post.link : post.path)) %>">
                <% if(post.subtitle) { %>
                <%=post.title %> - <%=post.subtitle %>
                <% } else { %>
                <%=post.title %>
                <% } %>
              </a>
            </p>
            <p>
              <small>
                <%- partial('../_partial/date.ejs', { datetime: post.date }) %>
              </small>
            </p>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
  <% } %>


</aside>

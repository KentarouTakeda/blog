<!DOCTYPE html>
<html lang="<%- config.language %>">

<%- partial('_partial/head') %>

<body>
  <header class="navbar" aria-label="main navigation">
    <div class="navbar-brand">
      <a href="<%- url_for() %>" class="navbar-item">
        <%= config.title %>
      </a>
    </div>
  </header>
  <div class="container">
    <div class="columns">
      <div class="main column is-8">
        <%- body %>
      </div>
      <div class="sidebar column is-4">
        <%- partial('_partial/sidebar') %>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <div class="content has-text-centered">
        <p>
          <%= config.title %>
          Copyright &copy; <% new Date().getFullYear() %> <%= config.author %>
        </p>
      </div>
    </div>
  </footer>
</body>

</html>
